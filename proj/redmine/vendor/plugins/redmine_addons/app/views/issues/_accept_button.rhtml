<% if @issue.status_id != RedmineAddons::Config.settings['status_ids']['new'] %>
  <span class="icon icon-accept" style="margin-right:10px">
    <%= t('accept_button_label') %>
  </span>
<% else %>
  <%= link_to t('accept_button_label'), { :controller => 'issues', :action => 'edit', :id => @issue },
              :class => 'icon icon-accept', :style => 'margin-right:10px',
              :onclick => "RejectAcceptButtons.performAccept(); return false;"
  %>
<% end %>